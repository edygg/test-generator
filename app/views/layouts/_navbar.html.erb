<nav class="navbar navbar-inverse">
	<div class="navbar-header">
		<%= link_to "Test Generator", root_path, { class: 'navbar-brand' } %>
	</div>
	<ul class="nav navbar-nav">
		<li>
			<%= link_to exam_path do %>
				Solve a test <%= icon('pencil') %>
			<% end %>
		</li>
		<li class="dropdown">
			<a href="#" data-toggle="dropdown">Questions <%= icon 'angle-down' %></a>
			<ul class="dropdown-menu">
				<li>
					<%= link_to new_question_path do %>
						<%= icon('plus-square') %> | Add question
					<% end %>
				</li>
				<li>	
					<%= link_to questions_path do %>
						<%= icon('bars') %> | Check question's database
					<% end %>
				</li>
			</ul>
		</li>
	</ul>

	<div class="navbar-right">
		<% if user_signed_in? %>
			<p class="navbar-text">Welcome <%= current_user.email %></p>
			<%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-danger navbar-btn' %>
		<% else %> 
			<%= link_to 'Sign in', new_user_session_path, class: 'btn btn-success navbar-btn' %>
			<%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-info navbar-btn' %>
		<% end %>
	</div>
</nav>